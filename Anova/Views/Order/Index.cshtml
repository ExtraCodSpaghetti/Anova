@model Anova_Models.ViewModels.OrderListVM

<div class="d-flex" style="min-height: 100vh;">
    <!-- Sidebar -->
    <aside class="sidebar bs-tertiary-color text-white p-3" style="min-width: 250px;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="poppins-semibold">Admin Area</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link text-dark text-white" asp-area="" asp-controller="Product" asp-action="Index">Product</a>
            </li>
            <li>
                <a class="nav-link text-dark text-white" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
            </li>
            <li>
                <a class="nav-link text-dark text-white" asp-area="" asp-controller="ApplicationType" asp-action="Index">Application Type</a>
            </li>

            <li>
                <a class="nav-link text-dark text-white" asp-area="" asp-controller="Order" asp-action="Index">Order</a>
            </li>
            <li>
                <a class="dropdown-item nav-link text-info" href="https://sandbox.braintreegateway.com/merchants/sqs9cf9v2p79bk6z/transactions/advanced_search" target="_blank">
                    Transactions
                </a>
            </li>
        </ul>
        <hr>
        <li>
            <a class="dropdown-item nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Create Admin User</a>
        </li>
    </aside>

    <!-- Main content -->
    <div class="flex-grow-1">

<form method="get">
    <div class="container p-4 my-3">
        <h2 class="text-info">Orders Management</h2>
        <div class="border bg-white p-3" style="border-radius:15px;">
            <div class="row">
                <div class="col-12">
                    <div class="row" style="padding-top:10px">
                        <div class="col-4">
                            @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @placeholder = "Name..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control", @placeholder = "Email..." } })
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control", @placeholder = "Phone..." } })
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-4">
                            @Html.DropDownListFor(u=>u.Status,Model.StatusList,"--Order Status--",new {@class="form-select" })
                        </div>
                        <div class="offset-4 col-4">
                            <button type="submit" class="h-100 btn btn-info form-control">
                                <i class="fas fa-search"></i>Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />

    <div class="bg-white p-3">
        <ejs-grid id="Grid" dataSource="@Model.OrderHList" allowFiltering="true" allowSorting="true" allowPaging="true">
            <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
            <e-grid-pagesettings pageSize="8"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
                <e-grid-column field="FullName" headerText="Name" textAlign="Right"></e-grid-column>

                <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
                <e-grid-column field="PhoneNumber" headerText="Phone" textAlign="Right"></e-grid-column>
                <e-grid-column field="OrderStatus" headerText="Status" textAlign="Right"></e-grid-column>
                <e-grid-column field="OrderDate" headerText="Order Date" customFormat="@(new { type="date", format="MM/dd/yyyy" })" textAlign="Right"></e-grid-column>
                <e-grid-column field="Id" headerText="" width="70"
                               template="<a rel='nofollow' href='Order/Details/${Id}' class='btn btn-primary'> <i class='fas fa-list'></i><a>">

                </e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    </div>

    </div>
