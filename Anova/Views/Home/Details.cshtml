@using Anova_Utility;
@model Anova_Models.ViewModels.DetailsVM

<div class="container">
    <form method="post">
        <input asp-for="@Model.Product.Id" hidden />
        <div class=" backgroundWhite pt-3">
            <div class="post">

                <div class="card-body pt-3">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePath@Model.Product.Image" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">
                                    <div class="card-top  text-dark row ">
                                        <div class="col-12 col-md-10">
                                            <h1 class="text-dark">@Model.Product.Name</h1>
                                        </div>
                                        <div class="col-12 col-md-2 text-md-right">
                                            <h1 class="text-warning"> $@((Model.Product.Price))</h1>
                                        </div>
                                    </div>

                                    <div class="col-10">
                                        <span class="text-dark badge p-3 border">@Model.Product.Category.CategoryName</span>
                                        <span class="text-dark badge p-3 border">@Model.Product.ApplicationType.Name</span>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.Product.ShortDesc) </p>
                                       
                                    </div>
                                    
                                        <div class="col-12">
                                           Select amounts 
                                        </div>
                                        <div class="col-2">
                                            @if (Model.ExistInCart)
                                            {
                                                <input asp-for="@Model.Product.TempAmounts " disabled class="form-control" />
                                            }
                                            else
                                            {
                                                <input asp-for="@Model.Product.TempAmounts"  class="form-control" />

                                            }
                                            <span asp-validation-for="@Model.Product.TempAmounts" class="text-danger"></span>
                                        </div>
                                    <div class="col-12 col-md-4 pb-1 ">
                                        <a asp-action="Goods" class="btn btn-outline-dark btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                                    </div>
                                    <div class="col-12 col-md-4 ">
                                        @if (Model.ExistInCart)
                                        {
                                            <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-outline-warning btn-square form-control btn-lg" style="height:50px;">Remove from Cart</a>
                                        }
                                        else
                                        {


                                            <button type="submit" asp-route-id="@Model.Product.Id" class="btn btn-outline-dark form-control btn-lg" style="height:50px;">Add to Cart</button>
                                        }
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer pt-4">
                    <div class="row">
                        <p class="text-secondary">@Html.Raw(Model.Product.Description) </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

 @section Scripts{
        <partial name="_ValidationScriptsPartial"/>
    }